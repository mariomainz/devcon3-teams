.row-fluid
  #user_profile.span3
    %img.placeholder{ src: Gravatar.new(@user.email).image_url }

    %br
    %h1= @user.first_name
    %h1= @user.last_name
    %h5= @user.role
    
    %hr

    %table
      %tr
        %td.grey{:width => "60px"}= "From:"
        %td= @user.location
      %tr
        %td.grey= "Joined:"
        %td= @user.created_at.to_formatted_s(:long)
      %tr
        %td.grey= "Email:"
        %td= @user.email
      %tr
        %td
        %td.pull-right= link_to "edit", edit_user_path(@user.id) if current_user.id == @user.id
  #profile_content.span9
    .row-fluid 
      .span12
        .span2 Latest status: 
        - stat = @user.status.last
        .latest_stat= stat.content
        
        
        .my_previous_statuses
          - head, *tail = @user.status.reverse
          - tail.each do |s|
            .span3.user_stat
              = s.content
          
	  

    
