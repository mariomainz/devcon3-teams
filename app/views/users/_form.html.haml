= form_for(@user) do |f|
  = if @user.errors.any?
    #error_explanation
      = pluralize(@user.errors.count, "error")
      = "prohibited this user from being saved:"
    %ul
      - @user.errors.full_messages.each do |msg|
        %li= msg

  .field
    = f.label :first_name
    %br
    = f.text_field :first_name

  .field
    = f.label :last_name
    %br
    = f.text_field :last_name

  .field
    = f.label :role
    %br
    = f.text_area :role

  .field
    = f.label :location
    %br
    = f.text_field :location

  .field
    = f.label :email
    %br
    = f.text_area :email
  .actions
    = f.submit
