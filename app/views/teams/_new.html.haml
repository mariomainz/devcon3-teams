.modal.hide.fade.in{id: "new_team", role: "dialog"}
  .modal-header
    %button.close{type: "button", "data-dismiss" => "modal", "aria-hidden" => "true"} &times;
    %h3= I18n.t('annotation.event.add')

  = form_for Team.new, url: teams_url, as: :team, html: {class: 'form-horizontal'} do |f|
    .modal-body
      = f.text_field :name, class: "span4 required"
      = f.text_field :description, class: "span4 required", row: 3

    .modal-footer
      %button.btn.btn-link{ type: "button", "data-dismiss" => "modal" }= I18n.t('annotation.generic.cancel_button')
      = f.submit "Create", class: 'btn btn-primary'