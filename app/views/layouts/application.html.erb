<!DOCTYPE html>
<html>
<head>
  <title>Injixo Teams</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

  <div class="container">
    <div class="masthead">
      <%= render 'layouts/user_header' %>
      <h3 class="muted"><%= link_to "Injixo Teams", root_path %></h3>
    </div>
    <hr />
    <div class="span12">
      <% if current_user.status.count > 0 %>
        <% stat = current_user.status.last %>
        <div class="latest_stat">
          <%= stat.content %>
        </div>
      <% end %>
    </div>
    <%= yield %>
  </div>

</body>
</html>
