%p= link_to "Back to topics", topics_path

%h1= "#{@topic.title}"
%table.hole-width.row-fluid.response-box
  %td.left-response-data
    %img.timy-gravatar{ src: Gravatar.new(@topic.user.email).image_url }
    %p.post-author
      created by
    %p.post-author
      = link_to @topic.user.full_name, user_path(@topic.user)
    %p.post-author
      = time_ago_in_words(@topic.created_at) + " ago"

  %td.right-response-data.table-alignment-top
    %p.post-content= @topic.content

%h2 Responses
.responses
  %table.hole-width.row-fluid
    - @responses.each do |response|
      %tr.response-box
        = render response


%h2 Enter a New Response
= form_for :response, url: "/topics/#{@topic.id}/responses" do |f|
  %p
    %br/
    = f.text_area :content
  = f.hidden_field :user_id, :value => current_user.id
  %p
    = f.submit value: "Send"

